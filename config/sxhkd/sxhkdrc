# restart sxhkd config
super + Escape
  pkill -USR1 -x sxhkd

# terminal kitty
super + Return
  kitty

# using maim for screenshot
super + Print
  maim -u $HOME/Pictures/screenshots/"$(date +%Y-%h-%d-%H-%M-\
  %S).png"

super + shift + Print
  maim -u -s $HOME/Pictures/screenshots/"$(date +%Y-%h-%d\
  -%H-%M-%S).png"

# slock
super + shift + Escape
  slock

# rofi
super + d ; {d,x,c,w,s,e,m}
  {rofi -show drun -show-icons,~/dotfiles/config/scripts/rofi-power.sh,\
  ~/dotfiles/config/scripts/rofi-config.sh,~/dotfiles/config/scripts/rofi-bookmarks.sh,\
  ~/dotfiles/config/scripts/rofi-gsearch.sh,rofi -show emoji -modi emoji,\
  ~/dotfiles/config/scripts/rofi-beats.sh}

# browser
super + b
  brave

# nemo file browser
super + n
  nemo
