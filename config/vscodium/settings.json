{

  // ==== THEME and APPEARANCE ==== 

  "editor.fontFamily": "'InconsolataLGC Nerd Font'",
  "editor.fontSize": 15,
  "workbench.colorTheme": "Nord",
  // "workbench.iconTheme": "material-icon-theme",
  "window.menuBarVisibility": "hidden",
  "workbench.statusBar.visible": true,
  // "workbench.activityBar.visible": false,
  "terminal.integrated.inheritEnv": false,
  // "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "none",


  // cursor customization
  "editor.cursorBlinking": "solid",
  // "workbench.colorCustomizations": {
    // "editorCursor.foreground": "#ffffff",
    // "terminalCursor.foreground": "#ffff00",

    // "statusBar.background" : "#252526",
    // "statusBar.noFolderBackground" : "#212121",
    // "statusBar.debuggingBackground": "#263238",
    // "statusBar.debuggingBackground": "#252526",
    // "statusBar.noFolderBackground" : "#252526",
  // },

  // integrated terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 16,
  "workbench.panel.defaultLocation": "right",

  // ==== TABS and SPACES and AUTOCOMPLETE

  "editor.tabSize": 2,
  // "editor.detectIndentation": true,
  // status bar customization
  
  "editor.acceptSuggestionOnEnter": "off",
  "editor.parameterHints.enabled": false,
  // "editor.detectIndentation": false,

  "files.trimFinalNewlines": true,
  "workbench.settings.useSplitJSON": true,
  "window.restoreWindows": "none",
  "editor.detectIndentation": false,

  // FOR BACK-END -- auto-complete: off
  // "editor.quickSuggestionsDelay": 10000,
  // "editor.quickSuggestions": false,
  // "editor.suggest.showTypeParameters": false,
  // "editor.hover.enabled": false,
  // "diffEditor.ignoreTrimWhitespace": false,
  // java
  // "java.completion.enabled": false,
  //"java.configuration.checkProjectSettingsExclusions": false,

  // FOR FRONT-END -- auto-complete: on
  "editor.quickSuggestionsDelay": 0,
  "editor.quickSuggestions": true,
  "editor.suggest.showTypeParameters": true,
  "editor.hover.enabled": true,
  "editor.copyWithSyntaxHighlighting": false,
  // java
  "java.completion.enabled": true,

  // ==== EMMET ====

  //emmet inside react jsx
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.excludeLanguages": [
      "markdown"
  ],
  
  // ==== GIT ====
  "git.decorations.enabled": false,
  "git.enabled": false,

  // ==== Settings ====

  "security.workspace.trust.untrustedFiles": "open",
  "http.proxyAuthorization": null,
  "extensions.ignoreRecommendations": true,
  "sync.gist": "76d5a4a47262a1df70898573e4643934",
  "window.zoomLevel": 1,

  
}
